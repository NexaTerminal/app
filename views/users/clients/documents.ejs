    <style>
        /* General styles */
        body {
            font-family: Arial, sans-serif;
        }
        /* Category buttons (cards) */
        .category-buttons {
            display: flex;
            justify-content: center;
            /* margin-top: 3rem; 3rem under the header */
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }
        .category-button {
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px 25px;
            margin: 10px;
            text-decoration: none;
            color: #333;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .category-button.active {
            background-color: #ddd;
        }
        .category-button:hover {
            background-color: #eaeaea;
        }
        /* Hide all category content by default */
        .category-content {
            display: none;
        }
        /* Show the active category content */
        .category-content.active {
            display: block;
        }
        /* Styles for templates-grid */
        .templates-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .template-link {
            display: flex; /* Use flex to center content */
            align-items: center; /* Vertical centering */
            justify-content: center; /* Horizontal centering */
            width: 13rem; /* Set width to 5rem */
            height: 6rem; /* Set height to 15rem */
            margin: 10px;
            border: 1px solid #ccc;
            border-radius: 8px;
            text-decoration: none;
            color: #333;
            background-color: #f9f9f9;
            transition: all 0.3s ease;
            overflow: hidden; /* Hide overflowed content */
            text-align: center;
        }
        .template-link:hover {
            background-color: #eaeaea;
        }
    </style>
</head>
